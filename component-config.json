  "integration_phases": {
    "phase_1": {
      "name": "Core Extensions",
      "weeks": "1-4",
      "components": ["atomspace-rocks", "atomspace-restful", "moses"],
      "focus": "Storage backends, REST API, and basic learning",
      "success_criteria": [
        "RocksDB storage functional",
        "REST API endpoints working", 
        "MOSES optimization algorithms operational"
      ]
    },
    "phase_2": {
      "name": "Logic Systems", 
      "weeks": "5-8",
      "components": ["unify", "ure", "language-learning"],
      "focus": "Pattern matching, rule engines, and language processing",
      "success_criteria": [
        "Pattern unification working",
        "Rule engine executing properly",
        "Language learning algorithms functional"
      ]
    },
    "phase_3": {
      "name": "Cognitive Systems",
      "weeks": "9-12", 
      "components": ["attention", "spacetime"],
      "focus": "Attention allocation and spatial-temporal reasoning",
      "success_criteria": [
        "ECAN attention spreading working",
        "Spatial reasoning operational",
        "Temporal sequence processing functional"
      ]
    },
    "phase_4": {
      "name": "Advanced & Learning",
      "weeks": "13-16",
      "components": ["pln", "miner", "asmoses"],
      "focus": "Probabilistic reasoning, pattern mining, program evolution",
      "success_criteria": [
        "PLN uncertain reasoning working",
        "Pattern mining discovering knowledge",
        "Program evolution generating solutions"
      ]
    },
    "phase_5": {
      "name": "Language & Integration",
      "weeks": "17-20",
      "components": ["lg-atomese", "learn", "opencog"],
      "focus": "Language processing and final system integration",
      "success_criteria": [
        "Link Grammar parsing functional",
        "Unsupervised learning working",
        "Complete OpenCog stack operational"
      ]
    }
  },
  
  "build_requirements": {
    "cmake_minimum": "3.10",
    "cpp_standard": "17",
    "boost_minimum": "1.60", 
    "python_minimum": "3.7",
    "guile_minimum": "2.2",
    "additional_libraries": [
      "RocksDB (for atomspace-rocks)",
      "HTTP/REST libraries (for atomspace-restful)",
      "Link Grammar library (for lg-atomese)"
    ]
  },
  
  "testing_strategy": {
